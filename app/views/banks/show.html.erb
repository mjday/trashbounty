<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-xs-12">

      <div id="map" class="mb-3" style="height: calc(50vh - 50px); width: 100vw" data-marker="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<!-- Card -->
  <div class="container">
    <div class="card map-card">
      <!-- Card content -->
      <div class="card-body closed px-0">
        <div class="white px-4 pb-4 pt-3-5">
          <h5 class="card-title h5 living-coral-text"><%= @bank.name %></h5>
          <hr>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th scope="row" class="px-0 pb-3 pt-2">
                    <i class="fas fa-map-marker-alt living-coral-text"></i>
                </th>
                <td class="pb-3 pt-2"><%= @bank.address %></td>
              </tr>
              <tr class="mt-2">
                <th scope="row" class="px-0 pb-3 pt-2">
                  <i class="far fa-clock living-coral-text"></i>
                </th>
                <td class="pb-3 pt-2"><span class="deep-purple-text mr-2">Hours of Operations</td>
              </tr>
              <tr class="mt-2">
                <th scope="row" class="px-0 pb-3 pt-2">
                  <i class="fas fa-cloud-moon living-coral-text"></i>
                </th>
                <td class="pb-3 pt-2"><%= @bank.phone_number %></td>
              </tr>
              <tr class="mt-2">
                <th scope="row" class="px-0 pb-3 pt-2">
                  <i class="fas fa-cloud-moon living-coral-text"></i>
                </th>
                <td class="pb-3 pt-2">Price per KG:
                <% @plastics.each do |plastic| %>
                  <%= plastic.name %> - $<%= plastic.price_per_kg %>
                  <% end %>
                </td>
              </tr>
              <tr class="mt-2">
                <th scope="row" class="px-0 pb-3 pt-2">
                  <i class="fas fa-cloud-moon living-coral-text"></i>
                </th>
                <td class="pb-3 pt-2">Products Accepted: <%= @bank.products_accepted %></td>
              </tr>
                <% if @bank.reviews.any? %>
              <tr class="mt-2">
                <th scope="row" class="px-0 pb-3 pt-2">
                  <i class="fas fa-star-half-alt"></i>
                </th>
                <td class="pb-3 pt-2">
                  Average Rating: <%= @bank.average_rating %> <i class="fas fa-star"></i></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div> <!-- card map-card-->
    <h3>Recent reviews</h3>
    <div class="card-product">
      <img src="https://mdbootstrap.com/img/Photos/Avatars/avatar-8.jpg" class="rounded-circle m-2" alt="avatar">
    <!--   add Avatar here />
     -->  <p> <%= @bank.user.username  %></p>
      <div class="card-product-infos">
      <% @reviews.each do |review| %>
        <h2><%= review.rating %> <i class="fas fa-star"></i></h2>
        <p><strong>Comment:</strong> <%= review.comment %></p>
        <p><strong>Date:</strong> <%= review.collection.date.strftime("%b %d, %Y") %></p>

      <% end %>
      </div>
    </div>
  </div> <!-- container -->

  <% if @user.business == true %>
    <%= link_to "Edit", edit_bank_path(@bank) %>

  <% else %>

  <% end %>
  <!-- renders Collector Users Dashboard  -->
<%= link_to "Search again", banks_path, class: "btn btn-lg btn-primary"  %>



     </div>
  </div>
</div>
