<%= simple_form_for([ @collection, @review ]) do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: 1..5 %>
  <div class="d-flex flex-column">
    <%= f.submit "Add review", class: "btn btn-primary text-white text-center mt-3" %>
    <%= link_to "Return to dashboard page", users_dashboard_path, class: "btn btn-primary mt-4" %>
  </div>
<% end %>
