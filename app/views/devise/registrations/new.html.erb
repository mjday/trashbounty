<div class="banner">
<div class="container-fluid" style="height: 100vh;">
    <div class="ml-2 pt-3 row justify-content-start">
        <div class="col-xs-2"><img src="<%= asset_path('trashbounty-logo.png') %>" alt="trashbounty logo" height="40vh" width="40vw">
        </div>
    </div>
      <div class="ml-2 row justify-content-start">
        <div class="col-xs-6"><h1>Trash Bounty</h1>
        </div>
      </div>
        <div class="ml-3 row justify-content-start">
          <div class="col-xs-6"><p>Turning waste into a commodity</p>
          </div>
        </div>


      <div class= "form-inputs">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

         <div class=" pt-5 d-flex align-items-center justify-content-center">
            <i class="fas fa-user-tie" style="margin-bottom: 1rem"></i>
             <%= f.input :username, label:false,
                        required: false,
                        autofocus: true,
                        placeholder: "username",
                        input_html: { autocomplete: "username" } %>
          </div>
          <div class="pt-2 d-flex align-items-center justify-content-center">
          <i class="far fa-envelope" style="margin-bottom: 1rem"></i>
          <%= f.input :email, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "email",
                      input_html: { autocomplete: "email" }%>
          </div>
          <div class="pt-2 d-flex align-items-center justify-content-center">
          <i class="fas fa-phone"style="margin-bottom: 1rem"></i>
          <%= f.input :phone_number, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "phone number",
                      input_html: { autocomplete: "phone_number" }%>
          </div>
          <div class="row justify-content-center", style="text-align: center;">
            <div>
            <%= f.label "Mark the box if you wish to sign up as a Business Account (Recycle Bank)"%>
          <%= f.input :business,
                      autofocus: true,
                      input_html: { autocomplete: "business" }%>
            </div>
          </div>
          <div class="pt-2 d-flex align-items-center justify-content-center">
          <i class="fas fa-unlock-alt"style="margin-bottom: 1rem"></i>
          <%= f.input :password, label:false,
                      required: true,
                      placeholder: "password",
                      input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="pt-2 d-flex align-items-center justify-content-center">
          <i class="fas fa-unlock-alt"style="margin-bottom: 1rem"></i>
          <%= f.input :password_confirmation, label:false,
                      required: true,
                      placeholder: "password confirmation",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        </div>

        <div class="form-actions", style="text-align: center;">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-center btn-lg" %>
        </div>
      <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end %>

     </div>
  </div>
</div>
