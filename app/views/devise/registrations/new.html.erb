<div class="banner-sign-up d-flex flex-column align-items-center justify-content-center container">

  <img class="mb-3" src="<%= asset_path('trashbounty-logo.png') %>" alt="" width="150" height="150">
  <h1 class="display-4 text-primary mb-3">Trash Bounty</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="d-flex justify-content-center align-items-center mb-2" >
            <i class="fas fa-user-tie" style="margin-right: 1rem; margin-bottom: 1rem;"></i>
             <%= f.input :username, label:false,
                        autofocus: true,
                        placeholder: "username",
                        input_html: { autocomplete: "username" } %>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-2">
          <i class="far fa-envelope" style="margin-right: 1rem; margin-bottom: 1rem;"></i>
          <%= f.input :email, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "email",
                      input_html: { autocomplete: "email" }%>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-2">
          <i class="fas fa-phone" style="margin-right: 1rem; margin-bottom: 1rem;"></i>
          <%= f.input :phone_number, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "phone number",
                      input_html: { autocomplete: "phone_number" }%>
          </div>
          <div class="regroup" style="text-align: center;">
            <%= f.label "Mark the box if you wish to sign up as a Business Account (Recycle Bank)"%>
          <%= f.input :business,
                      autofocus: true,
                      input_html: { autocomplete: "business" }%>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-2">
          <i class="fas fa-unlock-alt" style="margin-right: 1rem; margin-bottom: 1rem;"></i>
          <%= f.input :password, label:false,
                      required: true,
                      placeholder: "password",
                      input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="d-flex justify-content-center align-items-center mb-2">
          <i class="fas fa-unlock-alt" style="margin-right: 1rem; margin-bottom: 2rem;"></i>
          <%= f.input :password_confirmation, label:false,
                      required: true,
                      placeholder: "password confirmation",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        </div>

        <div class="form-actions" style="text-align: center;">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-center btn-lg" %>
        </div>
      <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end %>

     </div>
  </div>
</div>
