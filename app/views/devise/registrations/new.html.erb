<div class="banner-sign-up">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <h1>Trash Bounty!</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-user-tie"></i>
             <%= f.input :username, label:false,
                        required: false,
                        autofocus: true,
                        placeholder: "username",
                        input_html: { autocomplete: "username" } %>
          </div>
          <div class="d-flex align-items-center mb-3">
          <i class="far fa-envelope"></i>
          <%= f.input :email, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "email",
                      input_html: { autocomplete: "email" }%>
          </div>
          <div class="d-flex align-items-center mb-3">
          <i class="fas fa-phone"></i>
          <%= f.input :phone_number, label:false,
                      required: true,
                      autofocus: true,
                      placeholder: "phone number",
                      input_html: { autocomplete: "phone_number" }%>
          </div>
          <div class="regroup">
            <%= f.label "Mark the box if you wish to sign up as a Business Account (Recycle Bank)"%>
          <%= f.input :business,
                      autofocus: true,
                      input_html: { autocomplete: "business" }%>
          </div>
          <div class="d-flex align-items-center mb-3">
          <i class="fas fa-unlock-alt"></i>
          <%= f.input :password, label:false,
                      required: true,
                      placeholder: "password",
                      input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="d-flex align-items-center mb-3">
          <i class="fas fa-unlock-alt"></i>
          <%= f.input :password_confirmation, label:false,
                      required: true,
                      placeholder: "password confirmation",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-center btn-lg" %>
        </div>
      <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
<% end %>

     </div>
  </div>
</div>
