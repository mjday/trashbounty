<div class="banner-sign-in d-flex flex-column align-items-center justify-content-center container">

  <img class="mb-3" src="<%= asset_path('trashbounty-logo.png') %>" alt="" width="150" height="150">
  <h1 class="display-4 text-primary mb-3">Trash Bounty</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs d-flex flex-column row w-100%">
      <div class="d-flex w-100 mt-5">
        <i class="fas fa-user-tie align-self-center mb-3 mr-3"></i>
        <%= f.input :email, label:false,
        required: false,
        autofocus: true,
        placeholder: "Username or email",
        input_html: { autocomplete: "email" } %>
      </div>
      <div class="d-flex mt-3">
        <i class="fas fa-unlock-alt align-self-center mb-3 mr-3"></i>
        <%= f.input :password, label:false,
        required: false,
        placeholder: "Password",
        input_html: { autocomplete: "current-password" } %>
      </div>
      <div class="text-center mt-3">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      </div>
      <div class="form-actions text-center mt-2 mb-3 col-12">
        <%= f.button :submit, "Sign In", class: "btn btn-primary btn-center btn-lg col-12" %>
      </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end %>
</div>
