<div class="container collection">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 collection-show">

      <h2 class="display-4 text-primary my-3">Collection:</h2>


      <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
          <tr>
            <th class="th-sm">Date</th>
            <td><%= @collection.date.strftime("%b %d, %Y") %></td>
          </tr>

          <tr>
            <th class="th-sm">Amount ($)</th>
            <td><%= @collection.total_amount %></td>
          </tr>

          <tr>
            <th class="th-sm">Total Kg</th>
            <td><%= @collection.total_kg %></td>

          </tr>
          <tr>
            <th class="th-sm">Payment Type</th>
            <td><%= @collection.payment_type %></td>
          </tr>

          <tr>
            <th class="th-sm">Website</th>
            <td><%= @collection.bank.website %></td>
          </tr>

          <tr>
            <th class="th-sm">Phone Number</th>
            <td><%= @collection.bank.phone_number %></td>
          </tr>

          <tr>
            <th class="th-sm">Country</th>
            <td><%= @collection.bank.country %></td>
          </tr>
      </table>


      <% unless current_user.reviews.find_by(collection: @collection) %>
      <h3 class="text-primary mt-5">Add Review</h3>
              <%= render 'reviews/form' %>
      <% else %>

      <div class="d-flex flex-column mt-4">
        <h4 class="text-primary">Review:</h4>
          <div class="d-flex mt-3">
            <p>
              <% current_user.reviews.find_by(user: current_user).rating.times do %>
                <i class="y-star fas fa-star"></i>
              <% end %>
              </p>
            <p class="ml-3 text-primary"><%= current_user.reviews.find_by(user: current_user).comment %></p>
          </div>
      </div>
      <% end %>
    </div> <!-- end col-xs-12 -->
  </div> <!-- end row -->
</div>
