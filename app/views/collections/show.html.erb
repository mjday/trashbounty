<h2>Collection ID: <%= @collection.id %></h2>

<table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class="th-sm">Date</th>
      <td><%= @collection.date.strftime("%b %d, %Y") %></td>
    </tr>

    <tr>
      <th class="th-sm">Amount ($)</th>
      <td><%= @collection.total_amount %></td>
    </tr>

    <tr>
      <th class="th-sm">Total Kg</th>
      <td><%= @collection.total_kg %></td>

    </tr>
    <tr>
      <th class="th-sm">Payment Type</th>
      <td><%= @collection.payment_type %></td>
    </tr>

    <tr>
      <th class="th-sm">Recycle Bank</th>
      <td><%= @collection.bank.name %></td>
    </tr>

    <tr>
      <th class="th-sm">Website</th>
      <td><%= @collection.bank.website %></td>
    </tr>

    <tr>
      <th class="th-sm">Phone Number</th>
      <td><%= @collection.bank.phone_number %></td>
    </tr>

    <tr>
      <th class="th-sm">Country</th>
      <td><%= @collection.bank.country %></td>
    </tr>

</tbody>
</table>


<% unless current_user.reviews.find_by(user: current_user) %>
<h3>Add a review of this collection, and your experience with this Recycling bank</h3>
        <%= render 'reviews/form' %>
        <% else %>
<%= current_user.reviews.find_by(user: current_user).rating %>

<% end %>



