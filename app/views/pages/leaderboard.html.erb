<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 px-3">
      <h1 class="text-center display-4 text-primary mt-5 mb-3">Leaderboard</h1>

      <p class="text-center mb-4 text-primary"><strong><%= @sum %></strong> KG collected so far </p>

      <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th class="th-sm text-center">Rank</th>
            <th class="th-sm text-center">Username</th>
            <th class="th-sm text-center">Total Kg</th>
          </tr>
        </thead>
        <tbody>
          <% counter = 0 %>
          <% @users.each do |user| %>
          <tr>
            <% if user.name == current_user.username %>
              <%# @rank = counter += 1 %>
              <td class="td-active text-white"><%= counter += 1 %></td>
              <td class="td-active text-white"><%= user.name %></td>
              <td class="td-active text-white"><%= user.tot_kg %></td>
            <% else %>
               <td><%= counter += 1 %></td>
               <td><%= user.name %></td>
               <td><%= user.tot_kg %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
  </div>
</div>


